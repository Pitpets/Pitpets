<% content_for :head do %>
  <link href="/gamedata/pitpex/style.css" media="all" rel="stylesheet" />
  <script src="/gamedata/pitpex/UnityProgress.js"></script>

  <script type="text/javascript">
      function PitpexLoaded(){
          SendMessage("Pitpex", "Login", "<%= @current_user.guid %>");
      }
  </script>
<% end %>

  <p class="header"><span>Unity WebGL Player | </span>Pitpex</p>
  <div class="template-wrap clear">
    <canvas class="emscripten" id="canvas" oncontextmenu="event.preventDefault()" height="600px" width="960px"></canvas>
    <br>
    <div class="logo"></div>
    <div class="fullscreen"><img src="/gamedata/pitpex/fullscreen.png" width="38" height="38" alt="Fullscreen" title="Fullscreen" onclick="SetFullscreen(1);" /></div>
    <div class="title">Pitpex</div>
  </div>
  <p class="footer">&laquo; created with <a href="http://unity3d.com/" title="Go to unity3d.com">Unity</a> &raquo;</p>
  <script type='text/javascript'>
    var Module = {
      TOTAL_MEMORY:  500000000,
      //TOTAL_MEMORY: 268435456,
      errorhandler: null,			// arguments: err, url, line. This function must return 'true' if the error is handled, otherwise 'false'
      compatibilitycheck: null,
      dataUrl: "<%= asset_path 'gamedata/pitpex/SharedPitpets.data' %>",
      codeUrl: "<%= asset_path 'gamedata/pitpex/SharedPitpets.js' %>",
      memUrl: "<%= asset_path 'gamedata/pitpex/SharedPitpets.mem' %>",
    };
  </script>
  <script src="/gamedata/pitpex/UnityLoader.js"></script>
  

