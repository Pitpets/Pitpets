<h1>Find you some friends, you should!</h1>

<%= form_tag("/friends/find", method: "get") do %>
  <%= label_tag(:search, "Search for a friend:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

	<h2>Here's some friends you can add!</h2>
	<ul><% @users.each do |u| %>
		<li><%= u.username %>   <%= button_to "Send Request", 
				{:controller => "friends",
				 :action => "send_request",
				 :current_user => @current_user,
				 :target_user => u},
				 :method=>:post %></li>
	<% end %>
	</ul>

